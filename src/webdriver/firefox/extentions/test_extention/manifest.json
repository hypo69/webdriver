{
  "manifest_version": 2,
  "name": "Hypotez",
  "version": "1.0",

  "description": "Adds a red border",

  "icons": {
    "48": "icons/icon.png"
  },


  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Hypotez",
    "default_popup": "html/popup.html"
},
  
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "borderify.js" ]
    }
  ]
  
}