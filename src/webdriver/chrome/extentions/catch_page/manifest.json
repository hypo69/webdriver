{
  "manifest_version": 3,
  "name": "URL Sender",
  "version": "1.0",
  "description": "Sends the URL of the current page to a local server.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [ "activeTab", "storage" ]
}
